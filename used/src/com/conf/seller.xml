<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="seller" namespace="/seller" extends="default">
		<!-- 准备添加 跳转到add页面 -->
		<action name="createSeller" class="sellerAction" method="createSeller">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/addseller.jsp</result>
		</action>

		<!-- 添加记录 跳转回create方法 -->
		<action name="addSeller" class="sellerAction" method="addSeller">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">createSeller</result>
		</action>

		<!-- 修改记录 跳转回getALL方法 -->
		<action name="updateSeller" class="sellerAction" method="updateSeller">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllSeller</result>
		</action>

		<action name="status" class="sellerAction" method="status">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllSeller</result>
		</action>

		<!-- 批量删除记录 跳转回getALL方法 -->
		<action name="deleteSellerByIds" class="sellerAction" method="deleteSellerByIds">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllSeller</result>
			<result name="fail" type="chain">getAllSeller</result>
		</action>

		<!-- 删除记录 跳转回getALL方法 -->
		<action name="deleteSeller" class="sellerAction" method="deleteSeller">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllSeller</result>
			<result name="fail" type="chain">getAllSeller</result>
		</action>

		<!-- 查询全部记录 跳转到list页面 -->
		<action name="getAllSeller" class="sellerAction" method="getAllSeller">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/listseller.jsp</result>
		</action>

		<!-- 按主键查询 跳转到edit页面 为修改做准备 -->
		<action name="getSellerById" class="sellerAction" method="getSellerById">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/editseller.jsp</result>
		</action>

		<!-- 按条件查询 跳转到query页面 -->
		<action name="querySellerByCond" class="sellerAction" method="querySellerByCond">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/queryseller.jsp</result>
		</action>
	</package>

</struts>