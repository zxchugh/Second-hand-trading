<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="fav" namespace="/fav" extends="default">
		<!-- 准备添加 跳转到add页面 -->
		<action name="createFav" class="favAction" method="createFav">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/addfav.jsp</result>
		</action>

		<!-- 添加记录 跳转回create方法 -->
		<action name="addFav" class="favAction" method="addFav">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">createFav</result>
		</action>

		<!-- 修改记录 跳转回getALL方法 -->
		<action name="updateFav" class="favAction" method="updateFav">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllFav</result>
		</action>

		<!-- 批量删除记录 跳转回getALL方法 -->
		<action name="deleteFavByIds" class="favAction" method="deleteFavByIds">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllFav</result>
			<result name="fail" type="chain">getAllFav</result>
		</action>

		<!-- 删除记录 跳转回getALL方法 -->
		<action name="deleteFav" class="favAction" method="deleteFav">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success" type="chain">getAllFav</result>
			<result name="fail" type="chain">getAllFav</result>
		</action>

		<!-- 查询全部记录 跳转到list页面 -->
		<action name="getAllFav" class="favAction" method="getAllFav">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/listfav.jsp</result>
		</action>

		<!-- 按主键查询 跳转到edit页面 为修改做准备 -->
		<action name="getFavById" class="favAction" method="getFavById">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/editfav.jsp</result>
		</action>

		<!-- 按条件查询 跳转到query页面 -->
		<action name="queryFavByCond" class="favAction" method="queryFavByCond">
			<interceptor-ref name="adminStack"></interceptor-ref>
			<result name="success">/admin/queryfav.jsp</result>
		</action>
	</package>

</struts>